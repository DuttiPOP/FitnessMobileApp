<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitnessMobileApp"
        tools:targetApi="31">
        <activity
            android:name=".activities.PersonalDataActivity"
            android:theme="@style/Theme.FitnessMobileApp"
            android:exported="false" />
        <activity
            android:name=".activities.GoalsActivity"
            android:theme="@style/Theme.FitnessMobileApp" />
        <activity
            android:name=".activities.WorkoutPlanActivity"
            android:theme="@style/Theme.FitnessMobileApp" />
        <activity
            android:name=".activities.WorkoutLogActivity"
            android:theme="@style/Theme.FitnessMobileApp" />
        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/Theme.FitnessMobileApp" />
        <activity
            android:name=".activities.ProfileActivity"
            android:theme="@style/Theme.FitnessMobileApp" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:label="@string/app_nick"
            android:theme="@style/Theme.FitnessMobileApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>